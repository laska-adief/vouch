generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Recommendation {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tmdbId      String
  title       String
  mediaType   String
  posterPath  String
  releaseDate String
  voteAverage Float
  rating      String
  review      String
  userId      String
  userName    String
}
